{
  "name": "ghast-ctl",
  "version": "1.0.0",
  "description": "Browser/Electron automation CLI with Express-based control",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ghast": "./ghast",
    "ghast-ctl": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js start",
    "dev": "tsc --watch",
    "install-global": "echo \"export PATH=\\\"\\$PATH:$(pwd)\\\"\" >> ~/.zshrc && echo 'added to ~/.zshrc - restart your shell or run: source ~/.zshrc'"
  },
  "keywords": [
    "puppeteer",
    "electron",
    "browser-automation",
    "cli"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "puppeteer": "^24.0.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "license": "MIT"
}
